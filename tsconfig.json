{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./build",
    "rootDir": "./src",
    "lib": [
      "es2016",
      "dom",
      "esnext.asynciterable"
    ],
    "types": [
      "reflect-metadata"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules"
  ]
}