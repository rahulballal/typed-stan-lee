{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "lib": ["es2016", "dom"],
    "types": ["reflect-metadata","node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
